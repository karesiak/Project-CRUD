<Window x:Class="CRUD_2.LoginWindow"
          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="600" Width="450">
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <Label Content="Username:" HorizontalAlignment="Left" Margin="15,15,0,0" VerticalAlignment="Top" FontSize="18"/>
        <TextBox x:Name="usernameTextBox" HorizontalAlignment="Left" Height="35" Margin="15,45,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" FontSize="18"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="15,90,0,0" VerticalAlignment="Top" FontSize="18"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="15,120,0,0" VerticalAlignment="Top" Width="300" Height="35" FontSize="18"/>
        <Button Content="Login" HorizontalAlignment="Left" Margin="15,180,0,0" VerticalAlignment="Top" Width="300" Height="35" FontSize="18" Click="LoginButton_Click" />
    </Grid>
</Window>
